<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search By Course ID"
        android:id="@+id/search_by_course_id_radioButton"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Department ID:"
    android:id="@+id/department_id_textView"
    android:layout_marginLeft="100dp"
    android:layout_marginTop="100dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/department_id_editText"
        android:layout_below="@+id/search_by_course_id_radioButton"
        android:layout_toEndOf="@+id/department_id_textView"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course ID:"
        android:id="@+id/course_id_textView"
        android:layout_marginLeft="100dp"
        android:layout_alignBottom="@+id/course_id_editText"
        android:layout_alignEnd="@+id/department_id_textView"
        android:layout_marginBottom="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/course_id_editText"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/department_id_editText"
        android:layout_toEndOf="@+id/department_id_textView"
        android:layout_marginTop="5dp" />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search By Course Name"
        android:id="@+id/search_by_course_name_radioButton"
        android:layout_marginTop="200dp"
        android:layout_marginStart="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Name:"
        android:id="@+id/course_name_textView"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="250dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/course_name_editText"
        android:layout_below="@+id/search_by_course_name_radioButton"
        android:layout_toEndOf="@+id/course_name_textView"
        android:layout_marginLeft="10dp" />

    <android.support.design.widget.FloatingActionButton android:id="@+id/fab"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_input_add"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/search_by_course_name_radioButton"
        android:layout_marginEnd="@dimen/fab_margin"
        app:backgroundTint="#72cfeb"
        android:tint="#ffffff" />
</RelativeLayout>
