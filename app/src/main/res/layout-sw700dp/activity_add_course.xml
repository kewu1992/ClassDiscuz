<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search By Course ID"
            android:id="@+id/search_by_course_id_radioButton"
            android:layout_marginTop="50dp"
            android:layout_marginStart="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course ID:"
            android:id="@+id/course_id_textView"
            android:layout_marginLeft="100dp"
            android:layout_alignBottom="@+id/course_id_editText"
            android:layout_marginBottom="5dp"
            android:textSize="25dp" />

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/course_id_editText"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/search_by_course_id_radioButton"
            android:layout_toEndOf="@+id/course_name_textView"
            android:textSize="25dp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search By Course Name"
            android:id="@+id/search_by_course_name_radioButton"
            android:layout_marginTop="300dp"
            android:layout_marginStart="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Name:"
            android:id="@+id/course_name_textView"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="350dp"
            android:textSize="25dp" />

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/course_name_editText"
            android:layout_below="@+id/search_by_course_name_radioButton"
            android:layout_toEndOf="@+id/course_name_textView"
            android:layout_marginLeft="10dp"
            android:textSize="25dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Couese ID:"
            android:id="@+id/add_course_course_id_label_text_view"
            android:layout_gravity="left|top"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="43dp"
            android:layout_marginTop="45dp"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_course_course_id_text_view"
            android:layout_below="@+id/add_course_course_id_label_text_view"
            android:layout_toEndOf="@+id/add_course_course_id_label_text_view"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Name: "
            android:id="@+id/add_course_course_name_label_text_view"
            android:layout_below="@+id/add_course_course_id_text_view"
            android:layout_alignStart="@+id/add_course_course_id_label_text_view"
            android:layout_marginTop="100dp"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_course_course_name_text_view"
            android:layout_below="@+id/add_course_course_name_label_text_view"
            android:layout_toEndOf="@+id/add_course_course_name_label_text_view"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Instructor:"
            android:id="@+id/add_course_instructor_label_text_view"
            android:layout_below="@+id/add_course_course_name_text_view"
            android:layout_alignStart="@+id/add_course_course_name_label_text_view"
            android:layout_marginTop="100dp"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_course_instructor_text_view"
            android:layout_below="@+id/add_course_instructor_label_text_view"
            android:layout_toEndOf="@+id/add_course_instructor_label_text_view"
            android:textSize="25dp" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageButton"
            android:src="@android:drawable/ic_input_add"
            android:backgroundTint="#00ffffff"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="74dp" />

    </RelativeLayout>
</LinearLayout>
